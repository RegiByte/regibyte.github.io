---
import Layout from '../layouts/basic.astro';
import { Container } from '../components/ui/theme/container.jsx';
import GenerateUuid from '../components/tools/generateUuid.svelte';
import GetLocation from '../components/tools/getLocation.svelte';
import CalculateRomanNumeral from '../components/tools/calculateRomanNumeral.svelte';
import CalculateRomanToInteger from '../components/tools/calculateRomanToInteger.svelte';
---
<Layout>
  <Container className='mt-9 text-base text-zinc-600 dark:text-zinc-400'>
    <h1 class='text-2xl dark:text-zinc-300 text-zinc-600 py-2'>Quick tools</h1>
    <div class='mt-4 flex flex-col gap-4'>
      <GenerateUuid client:load />
      <GetLocation client:load />
      <CalculateRomanNumeral client:load />
      <CalculateRomanToInteger client:load />
    </div>
  </Container>

  <Container className='mt-9 text-base text-zinc-600 dark:text-zinc-400'>
    <h1 class='text-2xl dark:text-zinc-300 text-zinc-600 py-2'>Complex Tools</h1>
    <ul class='mt-4 flex flex-col gap-4'>
      <li>
        <a href='/tools/spend-wisely' class='hover:text-zinc-500  dark:text-zinc-300 text-zinc-600 hover:underline'>Calculate
          how much you can spend
          based on your total savings</a>
      </li>
    </ul>
  </Container>
</Layout>
